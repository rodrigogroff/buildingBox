@{
	// Build version
	var assembly = System.Reflection.Assembly.GetAssembly(typeof(Application));
	var version = assembly.GetName().Version.ToString(3);
}
<!DOCTYPE html>
<html lang="en" ng-app="app">
<head>
	<base href="/">
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title ng-bind="title">Building Box Office Management</title>
	<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
	<meta name="description">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	@Styles.Render("~/bundles/css")
	@Scripts.Render("~/bundles/scripts")
</head>
<body @*ng-controller="HomeController"*@>	
	<div ng-show="loggedIn == true" >
		<div align="center">
			<div id="ui-view" style="width:100%" ui-view></div>
		</div>
	</div>
	<div ng-show="loggedIn == undefined">
		<div align="center">
			<br />
			<a ui-sref="home" class="btn btn-sm {{btnHomeStyle}}" style="color:black">Home</a>&nbsp;&nbsp;&nbsp;
			<a ui-sref="site_customization" class="btn btn-sm {{btnCustomStyle}}" style="color:black">Customizations</a>&nbsp;&nbsp;&nbsp;
			<a ui-sref="site_simulation" class="btn btn-sm {{btnSimStyle}}" style="color:black">Infrastructure</a>&nbsp;&nbsp;&nbsp;
			<a ui-sref="site_features" class="btn btn-sm {{btnFeatureStyle}}" style="color:black">Features</a>&nbsp;&nbsp;&nbsp;
			<a ui-sref="login" class="btn btn-sm btn-primary" style="color:white">Login</a>&nbsp;&nbsp;&nbsp;
			<a ui-sref="site_register" class="btn btn-sm" style="color:black">Register</a>&nbsp;&nbsp;&nbsp;
			<br />
			<br />
		</div>
		<div ng-show="showLogo" align="center">
			<div class="animated fadeInLeftBig">
				<img src='../../images/logoBig.png' />
			</div>
		</div>
		<div id="about" class="widget widget-white">
			<div align="center">
				<div id="ui-view" style="width:100%" ui-view></div>
			</div>
		</div>
		<div align="center" ng-show="loggedIn != true">
			<br />
			<h3 style="color:white"> Building Box @@ 2017</h3>
		</div>
	</div>
	@Scripts.Render("~/bundles/app")	
</body>
</html>